<%# displays the doctor's name, department, and appointments,%>
<%# with each appointment's date, time, and patient name (linking to the patient's show page)  %>

<h1><%= @doctor.name %></h1>
<%= @doctor.department %>
<% @doctor.appointments.each do |appointment| %>
    <% @doctor_patient = @doctor.patients.find(appointment.patient_id) %>
    <%= link_to @doctor_patient.name, patient_path(@doctor_patient) %> - <%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appointment)%>
<% end %>